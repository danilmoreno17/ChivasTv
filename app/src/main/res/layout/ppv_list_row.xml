<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:weightSum="1">

        <ImageView
            android:id="@+id/billboard"
            android:layout_width="210dp"
            android:src="@drawable/dummy_pic"
            android:contentDescription="demo"
            android:layout_centerInParent="false"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:scaleType="fitCenter"
            android:layout_height="315dp"
            android:layout_alignParentLeft="true" />

        <ImageView
            android:id="@+id/iv_tags"
            android:layout_width="159dp"
            android:layout_height="159dp"
            android:src="@drawable/ic_comprar"/>
        <tqmgpartners.com.chivastv.Utils.MyTitleTextView
            android:text="prueba"
            android:layout_width="210dp"
            android:id="@+id/categories"
            android:textAlignment="center"
            android:minLines="1"
            android:maxLines="2"
            android:visibility="visible"
            android:layout_height="40dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_below="@+id/billboard"
            android:layout_alignParentStart="true" />
</RelativeLayout>
